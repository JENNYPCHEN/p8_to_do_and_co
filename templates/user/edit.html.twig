{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(userForm, {'action' : path('user_edit', {'id' : user.id})}) }}
             <label>Nom d'utilisateur</label>
       {{ form_widget(userForm.username,{'attr':{'class':'form-control'}}) }}
        <span class=" text-danger">{{ form_errors(userForm.username) }}</span>
        <label>Adresse email</label>
         {{ form_widget(userForm.email,{'attr':{'class':'form-control'}}) }}
      <span class=" text-danger">{{ form_errors(userForm.email) }}</span>
       {{ form_row(userForm.plainPassword.first,{'attr':{'class':'form-control'}}) }}
        <span class=" text-danger">{{ form_errors(userForm.plainPassword) }}</span>
       {{ form_row(userForm.plainPassword.second,{'attr':{'class':'form-control'}}) }}
        <span class=" text-danger">{{ form_errors(userForm.plainPassword) }}</span>
      {{ form_row(userForm.roles) }}
       <span class=" text-danger">{{ form_errors(userForm.roles) }}</span>
       <button type="submit" class="btn btn-success float-end mt-2">Sauvegarder</button>
        {{ form_end(userForm) }}
{% endblock %}
